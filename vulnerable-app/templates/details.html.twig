{% extends 'base.html.twig' %}
{% block body %}
    <div class="row justify-content-center">
        <div class="col-8">
            <h6 class="card-subtitle mb-2 text-muted">{% if comment.user %} {{ comment.user.username }} {% else %} Anonymous {% endif %} @ {{ comment.createdAt|date("Y-m-d H:i") }}</h6>
            <form method="post">
                <div class="form-group">
                    <textarea class="form-control" id="comment-field" name="contents" required>{{ comment.contents }}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
{% endblock %}