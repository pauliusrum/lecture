<div class="modal" id="login-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sign in</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {% if login_error %}
                    <script>$('#login-modal').modal('show')</script>
                    <div class="alert alert-danger">{{ login_error.message }}</div>
                {% endif %}

                <form id="login-form" method="post" action="{{ path('app_comments_index') }}">
                    <div class="form-group">
                        <input name="email" type="email" value="{{ last_username }}" id="email" class="form-control" placeholder="Email" required autofocus>
                    </div>
                    <div class="form-group">
                        <input id="password" class="form-control" type="password" name="password" placeholder="Password" required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" form="login-form">Proceed</button>
            </div>
        </div>
    </div>
</div>
